<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Deal Matching App</title>
    </head>
    <body>
        <%- include ('partials/navbardb.ejs') %>
        <div class="container mt-3">
            <h2>Update Company</h2>
            <form action="/updateCompany/<%= company.companyId %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="username" class="form-label">Company Name:</label>
                    <input type="text" name="companyname" class="form-control" id="companyname" value="<%= company.companyname %>" required>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Company Type:</label>
                    <input type="text" name="companytype" class="form-control" id="companytype" value="<%= company.companytype %>" required>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Country:</label>
                    <input type="text" name="country" class="form-control" id="country" value="<%= company.country %>" required>
                </div>
                <div class="mb-3">
                    <label for="industry" class="form-label">Industry:</label>
                    <select name="industry" class="form-control" id="industry" required>
                        <option>Technology</option>
                        <option>Finance</option>
                        <option>Healthcare</option>
                        <option>Consumer Goods</option>
                        <option>Industrial</option>
                        <option>>Services</option>
                        <option>>Real Estate</option>
                        <option>Education</option>
                        <option>Entertainment</option>
                        <option>Others</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Overview:</label>
                    <input type="text" name="overview" class="form-control" id="overview" value="<%= company.overview %>">
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Current File:</label>
                    <input type="file" name="currentfile" class="form-control" value="<%=company.file%>" disabled>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">New File:</label>
                    <input type="file" name="file" class="form-control" id="file" accept="file/*" value="<%=company.file%>">
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Funds Needed($mil):</label>
                    <input type="number" name="fundsneeded" class="form-control" id="fundsneeded" value="<%= company.fundsneeded %>" required>
                </div>

                <div class="mb-3">
                    <label for="investmenttype" class="form-label">Investment Type:</label>
                    <input type="text" name="investmenttype" class="form-control" id="investmenttype" value="<%= company.investmenttype %>" required>
                </div>

                <button type="submit" class="btn btn-primary">Update</button>

</body>

</html>